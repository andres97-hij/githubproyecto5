<h1>PRODUCTOS</h1>
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <div  class="container p-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <form action"" method="post">
            <div class="form-group">
              <label for="">registro</label>
            </div>
            <div class="form-group">
            <p>nombre</p> 
              <input class="form-control" type="text" name="nombre" id="">
            </div>
            <p>apellido</p> 
              <input class="form-control" type="text" name="apellido" id="">
            <p>edad</p> 
              <input class="form-control" type="text" name="edad" id="">
            <p>precio</p> 
              <input class="form-control" type="text" name="precio" id="">
            <p>vendidos</p> 
              <input class="form-control" type="text" name="vendidos" id="">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block">registrar</button>
            </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card-body">
       <h1>Perfiles comprados</h1>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">nombre</th>
      <th scope="col">apellido</th>
      <th scope="col">edad</th>
      <th scope="col">imagenes</th>
      <th scope="col">Precio</th>
      <th scope="col">vendidos</th>
    </tr>
  </thead>
  <tbody>
    {{#each }}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{nombre}}</td>
      <td>{{apellido}}</td>
      <td>{{edad}}</td>
      <td>{{imagenes}}</td>
      <td>{{precio }}</td>
      <td>{{vendidos }}</td>
      <td>
        <a href="delete/{{id}}" class="btn btn-outline-danger">Eliminar</a>
        <a href="" class="btn btn-outline-dark">Modificar</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
      </div>

    </div>
    
  </div>
 







  

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </body>
</html>